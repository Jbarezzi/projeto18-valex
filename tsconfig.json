{
  "compilerOptions": {
    "target": "es2016",              
    "module": "es6",                                
    "rootDir": "./src",                                
    "moduleResolution": "node",  
    "allowJs": true,  
    "esModuleInterop": true,                                                      
    "forceConsistentCasingInFileNames": true,             
    "strict": true,                                      
    "skipLibCheck": true,                                 
    "pretty": true,
    "outDir": "out",
    "sourceMap": true
  },
  "ts-node": {
    "esm": true
  }
}
